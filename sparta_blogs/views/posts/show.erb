<div class="">
  <h1><%= @post[:title] %></h1>
  <p><%= @post[:body] %></p>
</div>

<hr>

<!-- Set up a form with a button, which has a method "post" which will be over-ridden to delete it -->
<div class="">
  <a href="/<%= @post[:id] %>/edit">Edit</a>
  <form class="" action="/<%= @post[:id] %>" method="post">
    <input type="submit" name="" value="Delete Post">
    <input type="hidden" name="_method" value="delete">
  </form>
</div>
